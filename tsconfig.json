{
  "compilerOptions": {
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2016",
    "lib": ["es2016", "dom"],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "removeComments": true,
    "strict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "pretty": true,
    "stripInternal": true,
    "preserveSymlinks": true,
    "outDir": "./dist",
    "sourceRoot": "./src",
    "incremental": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "allowJs": true,
  }
}
